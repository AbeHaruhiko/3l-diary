{
    "version": "1.7.5",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": true,
        "placeOpenBraceOnNewLineForControlBlocks": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "files": [
        "./src/App.ts",
        "./src/components/auth/Auth.ts",
        "./src/components/edit/Edit.ts",
        "./src/components/Hello.ts",
        "./src/components/login/Login.ts",
        "./src/components/navbar/Navbar.ts",
        "./src/components/post-list-item/PostListItem.ts",
        "./src/components/post-list/PostList.ts",
        "./src/components/post/Post.ts",
        "./src/components/signup/Signup.ts",
        "./src/main.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
