{
    "version": "1.7.5",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": true,
        "placeOpenBraceOnNewLineForControlBlocks": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "!/typings/**/*.ts"
    ],
    "files": [
        "./src/App.ts",
        "./src/components/auth/Auth.ts",
        "./src/components/edit/Edit.ts",
        "./src/components/Hello.ts",
        "./src/components/login/Login.ts",
        "./src/components/navbar/Navbar.ts",
        "./src/components/post-list/PostList.ts",
        "./src/components/post/Post.ts",
        "./src/components/signup/Signup.ts",
        "./src/main.ts",
        "./typings/browser.d.ts",
        "./typings/browser/ambient/es6-promise/index.d.ts",
        "./typings/browser/ambient/firebase/index.d.ts",
        "./typings/browser/ambient/jquery/index.d.ts",
        "./typings/browser/ambient/node/index.d.ts",
        "./typings/browser/ambient/vue-router/index.d.ts",
        "./typings/browser/ambient/vue/index.d.ts",
        "./typings/main.d.ts",
        "./typings/main/ambient/es6-promise/index.d.ts",
        "./typings/main/ambient/firebase/index.d.ts",
        "./typings/main/ambient/jquery/index.d.ts",
        "./typings/main/ambient/node/index.d.ts",
        "./typings/main/ambient/vue-router/index.d.ts",
        "./typings/main/ambient/vue/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
